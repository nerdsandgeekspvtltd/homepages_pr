@page "/Event/{Id?}"
@using Sports.Events.Server.Services;
@using Sports.Events.Server.Models;


@if (eventDetail != null)
{

    <div class=" mx-auto py-3">

        <div class="relative w-full h-56 overflow-hidden">
            <img src="https://images.unsplash.com/photo-1496128858413-b36217c2ce36?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=3603&q=80"
                 alt=""
                 class="h-56 aspect-[16/9] w-full rounded-2xl bg-gray-100 object-cover sm:aspect-[2/1] lg:aspect-[3/2]">
            <div class="absolute inset-0 rounded-2xl ring-1 ring-inset ring-gray-900/10"></div>
        </div>

        <div class="p-1 mx:p-2 py-5 m-1 borderflex justify-center align-middle">

            <h1 class="mt-2 text-3xl font-bold text-center tracking-tight text-gray-900 sm:text-4xl">@eventDetail.Name</h1>

            <p class="text-base font-semibold leading-7 text-indigo-600 italic">   <span class="font-bold">Organised by </span> @eventDetail.Creator.Name</p>
        </div>

        <div class="flex justify-between items-start">
            <h6 class="text-white text-sm bg-black rounded-lg px-2 py-1">@eventDetail.EventType</h6>
            <h6>
                Starts at : <b> @eventDetail.StartTime </b>
                <br>
                <br />
                Ends at : <b> @eventDetail.EndTime </b>



            </h6>
        </div>

        <div class="p-2">
            @((MarkupString)eventDetail.Description)

            <p>Participants: @eventDetail.ParticipantCount / @eventDetail.MaxParticipating</p>

            @if (eventDetail.ParticipantCount >= eventDetail.MaxParticipating)
            {
                <p>Limit is over, no more participation allowed</p>
            }
            else
            {
                <button type="button" @onclick="JoinEvent" class="rounded bg-indigo-600 px-2 py-1 text-xs font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Join</button>
            }
        </div>








    </div>

}


<div class="p-2 my-2">
    <div id="map"></div>
</div>


