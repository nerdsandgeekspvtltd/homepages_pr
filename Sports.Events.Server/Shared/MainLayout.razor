@code {
    private bool toggleDark = false;
    bool toggleHighContrast = false;
    protected override async Task OnInitializedAsync()
    {
        sharedService.OnChange += StateHasChanged;
        base.OnInitialized();
        if (!(await LocalStorage.ContainKeyAsync("theme")))
        {
            await LocalStorage.SetItemAsStringAsync("theme", "light");
        }
        else
        {
            string theme = await LocalStorage.GetItemAsStringAsync("theme");

            if (theme == "dark")
            {
                toggleDark = true;
            }
            if (theme == "high-contrast")
            {
                toggleHighContrast = true;
            }
            else
            {
                toggleDark = false;
            }
        }
    }

    private async Task ChangeThemeToDark()
    {
        string theme = await LocalStorage.GetItemAsStringAsync("theme");
        await LocalStorage.SetItemAsStringAsync("theme", "dark");
        toggleDark = true;
        // if (theme == "dark")
        // {
        //     await LocalStorage.SetItemAsStringAsync("theme", "light");
        // }
        // else
        // {
        //     await LocalStorage.SetItemAsStringAsync("theme", "dark");
        // }
    }

    private async Task ChangeThemeToLight()
    {
        string theme = await LocalStorage.GetItemAsStringAsync("theme");
        await LocalStorage.SetItemAsStringAsync("theme", "light");
        toggleHighContrast = false;
        toggleDark = false;
    }

    private async Task AddContrastTheme()
    {
        string theme = await LocalStorage.GetItemAsStringAsync("theme");
        await LocalStorage.SetItemAsStringAsync("theme", "high-contrast");
        toggleDark = false;
        toggleHighContrast = !toggleHighContrast;
    }
}