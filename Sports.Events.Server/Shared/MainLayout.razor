<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
        padding: 0;
        transition: background-color 0.3s, color 0.3s;
    }

    .container {
        display: flex;
        justify-content: center;
        align-items: center;
        text-align: center;
    }

    .toggle-buttons {
        position: absolute;
        top: 5px;
        right: 10px;
        display: flex;
        gap: 10px;
    }

    .content {
        max-width: 600px;
        margin: 20px;
    }

    .light-theme {
        background-color: #ffffff;
        color: #0a0a0a;
    }

    .dark-theme {
        background-color: #000000;
        color: #ffffff;
    }

    .contrast-theme {
        background-color: #cb3a3a;
        color: #ffcc00;
    }

    button {
        padding: 5px 10px;
        border-radius: 5px;
        border: 1px solid #ccc;
        font-size: 14px;
        outline: none;
        cursor: pointer;
        transition: opacity 0.3s, background-color 0.3s, color 0.3s;
    }

    #darkButton {
        background-color: #000000;
        color: #ffffff;
    }

    #contrastButton {
        background-color: #000000;
        color: #ffcc00;
    }

    .active {
        border: 2px solid #000;
    }

    .dim {
        opacity: 0.5;
    }

    .high-contrast {
        background-color: #ffeed1;
        /* Add more styles as needed */
    }

    .dark {
        background-color: black;
        color: white;
    }

    .bg-gray-200 {
        background-color: #E2E8F0; /* Light theme background color */
    }

    .second-nav {
        margin-top: 33px; /* Adjust the value based on the height of your first nav */
    }

    .custom-color {
        background-color: darkblue;
    }

    .bg-footer {
        background-color: lavender;
    }
</style>

